<% @article.comments.each do |comment| %>
  <% next if comment.archived? %>
  <p>
    <strong><%= comment.commenter %> says:</strong>
  </p>
  <p>
    <%= comment.body %>
  </p>

  <p>
  <%= link_to "Destroy Comment", [comment.article, comment], data: {
                turbo_method: :delete,
                turbo_confirm: "Are you sure?"
              } %>
  </p>
<% end %>